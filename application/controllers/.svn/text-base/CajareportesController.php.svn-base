    	$dfecha = explode(" ", $datosfecha[0][0]);
    	$date = $dfecha[0];
    	
    	
    	$val[] = array('txtdia1', $date, 'val');
    	$val[] = array('txtdia2', $date, 'val');
    	$js[] = array('$("#txtdia1").datepicker({showOn: "button", buttonImage: jQuery.scriptPath + "img/calendar.gif",	buttonImageOnly: true});');
    	$js[] = array('$("#txtdia1").datepicker("option", "dateFormat", "yy-mm-dd");');
    	$js[] = array('$("#txtdia2").datepicker({showOn: "button", buttonImage: jQuery.scriptPath + "img/calendar.gif",	buttonImageOnly: true});');
    	$js[] = array('$("#txtdia2").datepicker("option", "dateFormat", "yy-mm-dd");');
    	
    	$func = new Libreria_Pintar();
    	$func->IniciaScript();
    	$func->PintarValor($val);
